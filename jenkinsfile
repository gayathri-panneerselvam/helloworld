pipeline {
   agent any
   tools {
      nodejs 'node'
    }
    stages{
        stage('Clean workspace') {
             steps {
                echo 'Cleaning Workspace...'
                deleteDir()
            }
        }
        stage(checkout) {
            steps {
                git url: 'https://github.com/gayathri-panneerselvam/hell0world.git'
            }
        }
        stage(build){
            steps {
                sh 'npm install -g @angular/cli'
                sh 'npm install'
                sh 'ng serve -o'
                
            }
        }

    }
}
